@article{imm2020,
  title = {Неассоциативные обертывающие алгебр Шевалле},
  author = {Левчук, В. М. and Сулейманова, Г. C. and Ходюня, Н. Д.},
  date = {2020},
  journaltitle = {Тр. ИММ УрО РАН},
  volume = {26},
  number = {3},
  pages = {91--100},
  abstract = {Произвольную алгебру \$R\$ называем точной обертывающей алгебры Ли \$L\$, если \$L\$ изоморфна алгебре \$R\textasciicircum\{(-)\}\$, полученной заменой умножения в \$R\$ коммутированием \$a ∗ b := ab− ba\$. Мы исследуем точные обертывающие алгебры некоторых подалгебр алгебры Шевалле над полем \$K\$, ассоциированной с неразложимой системой корней \$\textbackslash Phi\$. Структурные константы базы Шевалле этой алгебры определяет их выбор с известным произволом для нильтреугольной подалгебры \$N Φ(K)\$ с базой \$\textbackslash\{e\_r \textbackslash mid r \textbackslash in \textbackslash Phi\textasciicircum\{+\}\textbackslash\}\$. Построенные в 2018 г. точные обертывающие алгебры \$R\$ для \$N\textbackslash Phi(K)\$ зависят от этого выбора. Введено понятие стандартной обертывающей алгебры. Для типа \$A\_\{n-1\}\$ одну из точных обертывающих \$R\$ представляет алгебра \$NT(n, K)\$ нильтреугольных \$n \textbackslash times n\$-матриц над \$K\$. Стандартность \$R\$ в этом случае дает теорема Р. Дюбиша и С. Перлиса (1951) об идеалах алгебры \$NT(n, K)\$. В статье доказано, что ассоциативная точная обертывающая алгебра \$R\$ алгебры Ли \$N\textbackslash Phi(K)\$ типа \$A\_\{n-1\}\textbackslash{} (n {$>$} 3)\$ , с точностью до перехода к противоположной алгебре \$R\textasciicircum\{(op)\}\$, единственна и изоморфна алгебре \$NT(n, K)\$. Описаны стандартные обертывающие алгебры \$R\$. Доказано существование стандартной обертывающей \$R\$ для алгебр Ли \$N\textbackslash Phi(K)\$ всех типов \$\textbackslash Phi\$, исключая типы \$D\_n\textbackslash{} (n \textbackslash geq 4)\$ и \$E\_n\textbackslash{} (n = 6, 7, 8)\$.},
  authorscopus = {true},
  authorvak = {true},
  langid = {russian}
}

